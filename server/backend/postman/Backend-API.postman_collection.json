  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/login", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Parse JSON and basic checks",
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Response time < 1500ms', function () { pm.expect(pm.response.responseTime).to.be.below(1500); });",
                  "pm.test('Body has token', function () { const json = pm.response.json(); pm.expect(json).to.have.property('token'); pm.expect(json.token).to.be.a('string').that.is.not.empty; });",
                  "// Save token to environment",
                  "const json = pm.response.json(); pm.environment.set('token', json.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/forgot-password", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","forgot-password"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{email}}\"\n}" }
          },
          "event": [
            {"listen":"test","script":{"type":"text/javascript","exec":[
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Has message', function () { const json = pm.response.json(); pm.expect(json).to.have.property('message'); });"
            ]}}
          ]
        },
